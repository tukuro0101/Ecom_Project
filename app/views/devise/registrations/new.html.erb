<h2>Sign Up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control', required: true %>
  </div>

  <%= f.fields_for :addresses do |address_fields| %>
    <div class="mb-3">
      <%= address_fields.label :street, class: 'form-label' %>
      <%= address_fields.text_field :street, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= address_fields.label :city, class: 'form-label' %>
      <%= address_fields.text_field :city, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= address_fields.label :province_id, 'Province', class: 'form-label' %>
      <%= address_fields.collection_select :province_id, Province.all, :id, :name, {}, { class: 'form-control', required: true } %>
    </div>

    <div class="mb-3">
      <%= address_fields.label :postal_code, class: 'form-label' %>
      <%= address_fields.text_field :postal_code, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= address_fields.label :country, class: 'form-label' %>
      <%= address_fields.text_field :country, class: 'form-control', required: true, value: 'Canada', readonly: true %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>