<h1><%= @product.name %></h1>


<% if @product.on_sale? %>
  <p><strong>Sale Price:</strong> <%= number_to_currency(@product.sale_price) %></p>
  <p><del><%= number_to_currency(@product.price) %></del></p>
<% else %>
  <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
<% end %>

<p><strong>Category:</strong> <%= @product.category.name %></p>
<p><strong>Description:</strong> <%= @product.description %></p>

<%= form_with url: add_item_cart_path, method: :post, local: true do %>
  <%= hidden_field_tag :product_id, @product.id %>
  <div class="form-group">
    <%= label_tag :quantity %>
    <%= number_field_tag :quantity, 1, class: 'form-control', min: 1 %>
  </div>
  <%= submit_tag 'Add to Cart', class: 'btn btn-primary mt-2' %>
<% end %>
