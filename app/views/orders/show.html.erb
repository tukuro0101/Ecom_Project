<h1>Order Details</h1>

<p>
  <strong>Subtotal:</strong>
  <%= number_to_currency(@order.subtotal) %>
</p>

<p>
  <strong>Taxes:</strong>
  <ul>
    <% @order.order_taxes.each do |order_tax| %>
      <li><%= order_tax.tax_type.name %> (<%= order_tax.tax_rate %>%): <%= number_to_currency(order_tax.tax_amount) %></li>
    <% end %>
  </ul>
</p>

<p>
  <strong>Total:</strong>
  <%= number_to_currency(@order.total_price) %>
</p>

<h2>Order Items</h2>
<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
